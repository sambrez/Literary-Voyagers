<div>
<form id="book-form">
    <fieldset>
        <legend>Book Details</legend>
        <label for="title">Title</label>
        <input type="text" id="title" name="title"><br><br>
        <label for="author">Author</label>
        <input type="text" id="author" name="author"><br><br>
        <label for="genre">Genre</label>
        <select name="genre" id="genre">
            <option value="Biographies">Biographies</option>
            <option value="Classics">Classics</option>
            <option value="Current Affairs">Current Affairs</option>
            <option value="Fantasy">Fantasy</option>
            <option value="General Fiction">General Fiction</option>
            <option value="Historical Fiction">Historical Fiction</option>
            <option value="History">History</option>
            <option value="Mystery & Thrillers">Mystery & Thrillers</option>
            <option value="Romance">Romace</option>
            <option value="Science Fiction">Science Fiction</option>
            <option value="Self-Help">Self-Help</option>
            <option value="Social Sciences">Social Sciences</option>
            <option value="True Crime">True Crime</option>
            <option value="Other">Other</option>
        </select>
    </fieldset>
    <fieldset>
        <legend>Your Review</legend>
        <div>
            <label for="rec">Would you recommend this book?</label>
            <select id="rec" name="rec">
                <option value="true">YES</option>
                <option value="false">No</option>
            </select>
        </div>
        <div>
            <label for="review">Review</label>
            <textarea id="review" name="review" rows="4" cols="50"></textarea>
        </div>
    </fieldset>
    <button type="submit">Submit</button>
</form>
</div>

<script src="/js/addBook.js"></script>