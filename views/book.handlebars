<div class="book">
  <div class="card text-center">
    <div class="card-header">
      <h2>{{book.title}}</h2>
    </div>
    <div class="card-title">
      <h3>Author: {{book.author}}</h3>
      <h3>Genre: {{book.genre}}</h3>
    </div>
    <div class="card-body">
      <h3>Recommendation:</h3>
      {{#if book.recommendation}}
      {{get_thumbsUp}}
      {{else}}
      {{get_thumbsDown}}
      {{/if}}
      <h3>Review:</h3>
      <p class="card-text">{{book.review}}</p>
    </div>
    <div class="card-footer text-muted">
      <h5 class="card-text">Posted by {{users.name}}</h5>
    </div>
  </div>
  <div>
    <h3>Review this Book</h3>
    <form class="new-review">
      <fieldset>
        <legend>Recommendation</legend>
        <label for="recommendation">Do you recommend this book?</label>
        <select name="recommendation" id="recommendation">
          <option value="true">YES</option>
          <option value="false">NO</option>
        </select>
      </fieldset>
      <fieldset>
        <legend>Review</legend>
        <textarea id="review" name="review" rows="4" cols="50">Write your review</textarea>
      </fieldset>
      <button type="submit">Submit</button>
    </form>
  </div>

  <button class="wishlist-button" book-id="{{book_id}}" title="{{title}}" genre="{{genre}}" author="{{author}}">Add to
    Wishlist!</button>

</div>

<script src="/js/review.js"></script>
<script src="/js/addWishlist.js"></script>