{{!-- view of a user's wishlist and all books that have been added to it --}}
{{#each wishlist}}
  <div class="card text-center all-books">
  <div class="card-header">
    <a href="/books/{{book.id}}">
      <h2>{{book.title}}</h2><a />
  </div>
  <div class="card-body">
    <h3>Author: {{book.author}}</h3>
    <h3>Genre: {{book.genre}}</h3>
  </div>
</div>
{{/each}}

